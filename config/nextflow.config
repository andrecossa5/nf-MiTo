// Config prova

// Manifest
manifest {
  name = 'phylo_inference'
  author = 'Andrea Cossa'
  //homePage = 'https://github.com/andrecossa5/phylo_inference.git'
  description = 'Mitochondrial phylogeny inference.'
  mainScript = 'main.nf'
  nextflowVersion = '>=20.01.0'
  version = '0.1'
}

// Profiles
profiles {

  conda_garr {
    conda.enabled = true
    conda.envPath = '/home/ieo5505/mambaforge/envs/MI_TO'    
  }
  conda_local {
    conda.enabled = true
    conda.envPath = '/Users/IEO5505/mambaforge/envs/MI_TO'
  }
  local {
    docker.enabled = true
    docker.runOptions = '--volume /Users/:/Users/'
  }
  garr {
    docker.enabled = true
    docker.runOptions = '--volume /Users/:/Users/'  
  }

}

// Processes
process {

  // errorStrategy = 'retry'
  // maxRetries = 3

  withName: PREP_INPUT {
    cpus = 8
    memory = { 10.GB * task.attempt }
    container = 'acox1/mi_to:1.2'
  }
  withName: BOOTSTRAP {
    cpus = 1
    memory = { 1.GB * task.attempt }
    container = 'acox1/mi_to:1.2'
  }
  withName: BUILD_TREE {
    cpus = 1
    memory = { 1.GB * task.attempt }
    container = 'acox1/mi_to:1.2'
  }
}

// Tracing
trace {
  enabled = true
  file = "trace.txt"
  overwrite = true
}

// Tracing
tower {
  enabled = true
}
