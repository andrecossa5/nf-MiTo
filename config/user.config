// user.config

// Global process settings
process {
  errorStrategy = 'retry'
  maxRetries    = 3
}

// Profile-specific
profiles {

  docker {
    docker.runOptions = '--volume /Users/:/Users/'
  }
  conda {
    process {
      // Custom conda environment for each process label
      withLabel: 'scLT' {
        conda.envPath = '...'
      }
      withLabel: 'MiTo' {
        conda.envPath = '/Users/IEO5505/miniforge3/envs/MiTo'
      }
      withLabel: 'r-phylo' {
        conda.envPath = '/Users/IEO5505/miniforge3/envs/r-phylo'
      }
    }
  }
  singularity {
    singularity.runOptions = '--bind /data:/data'
  }

  // Other profiles here
  // ....

}


