// user.config

// Global process settings
process {
  errorStrategy = 'retry'
  maxRetries    = 3
}

// Profile-specific
profiles {

  docker {
    docker.runOptions = '--volume /Users/:/Users/'
  }
  conda {
    process {
      withLabel: 'scLT' {
        conda = '/data/cossasc/mambaforge/envs/scLT'
      }
      withLabel: 'MiTo' {
        conda = '/data/cossasc/mambaforge/envs/MiTo'
      }
      withLabel: 'r-phylo' {
        conda = '/data/cossasc/mambaforge/envs/r-phylo'
      }
    }
  }
  singularity {
    singularity.runOptions = '--bind /data:/data'
  }

  // Other profiles here
  // ....

}

