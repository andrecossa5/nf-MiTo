{
    "description": "Benchmarking configuration for method comparison",
    "use_case": "Compare different clustering methods and evaluate performance",
    
    "input_output_options": {
        "output_folder": "results/benchmarking"
    },
    
    "afm_preprocessing_options": {
        "filter_dbs": true,
        "cell_filter": "filter2",
        "filtering": "MiTo",
        "min_cell_number": 5,
        "min_cov": 5,
        "min_var_quality": 30,
        "min_n_positive": 5,
        "af_confident_detection": 0.02,
        "min_n_confidently_detected": 2,
        "min_mean_AD_in_positives": 1.25,
        "t_prob": 0.7,
        "min_AD": 2,
        "min_cell_prevalence": 0.05,
        "bin_method": "MiTo"
    },
    
    "phylogeny_reconstruction_options": {
        "K": 10,
        "distance_metric": "weighted_jaccard",
        "tree_algorithm": "cassiopeia",
        "cassiopeia_solver": "UPMGA",
        "n_boot_replicates": 100
    },
    
    "benchmarking_options": {
        "maxK": 20
    }
}