{
    "description": "Parameter tuning configuration for systematic optimization",
    "use_case": "Grid search across key parameters to find optimal settings",
    
    "input_output_options": {
        "output_folder": "results/parameter_tuning"
    },
    
    "afm_preprocessing_options": {
        "filter_dbs": true,
        "cell_filter": "filter2",
        "filtering": "MiTo",
        "min_cell_number": 5,
        "min_cov": 5,
        "min_var_quality": 30,
        
        "_comment": "Arrays for tuning - pipeline will test all combinations",
        "min_n_positive": [3, 5, 7, 10],
        "af_confident_detection": [0.01, 0.02, 0.03, 0.05],
        "min_n_confidently_detected": [2, 3, 4, 5],
        "min_mean_AD_in_positives": [1.0, 1.25, 1.5, 2.0],
        "t_prob": [0.6, 0.7, 0.8],
        "min_AD": [1, 2, 3],
        "min_cell_prevalence": [0.02, 0.05, 0.1],
        "bin_method": ["MiTo", "vanilla"]
    },
    
    "phylogeny_reconstruction_options": {
        "distance_metric": "weighted_jaccard",
        "tree_algorithm": "cassiopeia",
        "cassiopeia_solver": "UPMGA",
        "n_boot_replicates": 100
    }
}