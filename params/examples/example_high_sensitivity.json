{
    "description": "High-sensitivity variant detection for low-coverage data",
    "use_case": "Datasets with low sequencing depth or low variant frequencies",
    
    "input_output_options": {
        "raw_data_input_type": "mitobam",
        "output_folder": "results/high_sensitivity"
    },
    
    "cell_filtering_options": {
        "min_nUMIs": 200,
        "min_n_genes": 100,
        "max_perc_mt": 0.20,
        "n_mads": 4
    },
    
    "afm_preprocessing_options": {
        "filter_dbs": true,
        "cell_filter": "filter2",
        "filtering": "MiTo",
        "min_cell_number": 3,
        "min_cov": 3,
        "min_var_quality": 20,
        "min_n_positive": 3,
        "af_confident_detection": 0.01,
        "min_n_confidently_detected": 2,
        "min_mean_AD_in_positives": 1.0,
        "t_prob": 0.6,
        "min_AD": 1,
        "min_cell_prevalence": 0.02,
        "bin_method": "MiTo"
    },
    
    "phylogeny_reconstruction_options": {
        "distance_metric": "weighted_jaccard",
        "tree_algorithm": "cassiopeia",
        "cassiopeia_solver": "UPMGA",
        "n_boot_replicates": 500,
        "boot_strategy": "feature_resampling",
        "frac_char_resampling": 0.7
    }
}