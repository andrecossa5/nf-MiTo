{
    "description": "Cas9 lineage tracing system configuration",
    "use_case": "CRISPR/Cas9-based mitochondrial editing experiments",
    
    "input_output_options": {
        "raw_data_input_type": "fastq",
        "output_folder": "results/cas9_analysis"
    },
    
    "sclt_system_options": {
        "scLT_system": "Cas9",
        "pp_method": "maegatk"
    },
    
    "sequencing_data_preprocessing_options": {
        "CBs_chunk_size": 3000,
        "fgbio_min_reads_mito": 2,
        "fgbio_base_error_rate_mito": 0.3,
        "fgbio_base_quality": 25
    },
    
    "cell_filtering_options": {
        "min_nUMIs": 300,
        "min_n_genes": 200,
        "max_perc_mt": 0.25,
        "n_mads": 3
    },
    
    "afm_preprocessing_options": {
        "filter_dbs": true,
        "cell_filter": "filter2",
        "filtering": "MiTo",
        "min_cell_number": 5,
        "min_cov": 4,
        "min_var_quality": 25,
        "min_n_positive": 4,
        "af_confident_detection": 0.03,
        "min_n_confidently_detected": 2,
        "min_mean_AD_in_positives": 1.5,
        "t_prob": 0.7,
        "min_AD": 2,
        "min_cell_prevalence": 0.05,
        "bin_method": "MiTo"
    },
    
    "phylogeny_reconstruction_options": {
        "distance_metric": "hamming",
        "tree_algorithm": "cassiopeia",
        "cassiopeia_solver": "NJ",
        "n_boot_replicates": 200,
        "boot_strategy": "feature_resampling"
    }
}